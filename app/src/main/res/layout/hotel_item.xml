<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content" >

  <ImageView
    android:id="@+id/hotel_image"
    android:layout_width="@dimen/item_width_image"
    android:layout_height="@dimen/item_height_image"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginStart="@dimen/margin"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/hotel_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginStart="@dimen/margin_start"
    android:layout_marginEnd="@dimen/margin"
    android:textSize="@dimen/item_name_size"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/hotel_image"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/hotel_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginStart="@dimen/margin_start"
    android:textSize="@dimen/item_price_size"
    app:layout_constraintStart_toEndOf="@+id/hotel_image"
    app:layout_constraintTop_toBottomOf="@+id/hotel_name" />

</androidx.constraintlayout.widget.ConstraintLayout>